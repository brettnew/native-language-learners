<div class="col-sm-6" id="recommended_user_profile_page">
  <%= render "users/user" %>
  <h4>Send <%= mail_to @user.email, "#{@user.first_name}" %> an email to meet up and practice your language skills!</h4>
  <div id="map-container">
    <div id="map-canvas">

    </div>
  </div>
</div>

<script type="text/javascript">
  var handler = Gmaps.build('Google');
  handler.buildMap({ provdider: {disableDefaultUI: true}, internal: {id: 'map-canvas'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(14);
  });
</script>
