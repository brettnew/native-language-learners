<%= form_for @user, url: wizard_path do |f| %>
<%= render "layouts/errors", :object => @user %>
<div class="field">
  <%= f.label :bio %> <br>
  <%= f.text_area :bio, rows: 5, :class => 'form-control' %>
</div><br>
<div class="field">
  <%= f.label :image, "Upload Profile Picture" %> <br>
  <%= f.file_field :image %>
</div>
<br>
<%= f.submit "Next", :class => 'btn btn-default' %>
<% end %>
