<%= form_for @user, url: wizard_path do |f| %>
<% if @user.errors.any? %>
  <div class= "error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :bio %> <br>
  <%= f.text_area :bio, rows: 5, :class => 'form-control' %>
</div><br>
<div class="field">
  <%= f.label :image, "Upload Profile Picture" %> <br>
  <%= f.file_field :image %>
</div>
<br>
<%= f.submit "Finish", :class => 'btn btn-default' %>
<% end %>
