<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %> <br>
    <%= text_field_tag :email, params[:email], :class => 'form-control email' %>
  </div>
  <div class="field">
    <%= label_tag :password %> <br>
    <%= password_field_tag :password, params[:password], :class =>'form-control password' %><br><br>
    <%= submit_tag "Log In", :class => 'btn btn-default' %>
  </div>
<% end %>
